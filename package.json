{
  "name": "fin",
  "version": "1.0.0",
  "description": "函数库",
  "main": "dist.fin.common.js",
  "module": "dist/fin.es.js",
  "unpkg": "dist/fin.js",
  "type": "commonjs",
  "scripts": {
    "prepare": "husky install",
    "commit": "git-cz",
    "prebuild": "rimraf dist",
    "build": "env NODE_ENV=production node scripts/build.js",
    "dev:esm": "rollup -w -c scripts/config.js --environment TARGET:esModule",
    "dev:cjs": "rollup -w -c scripts/config.js --environment TARGET:commonJs",
    "dev": "npm run dev:esm",
    "lint": "eslint ./lib/*.js --no-eslintrc -c .eslintrc.js --ext .js,.jsx,.ts,.tsx,.mpx,.vue --cache --no-error-on-unmatched-pattern",
    "fix": "eslint ./lib/*.js --fix --no-eslintrc -c .eslintrc.js --ext .js,.jsx,.ts,.tsx,.mpx,.vue --cache --no-error-on-unmatched-pattern",
    "format": "prettier --write  \"(lib|scripts)/**/*.js\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache"
  },
  "keywords": [
    "fin"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verify-commit-msg.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "npx commitlint  --edit",
      "pre-push": "npm run test '$1'"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "author": "zhangfei13@baidu.com",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@rollup/plugin-strip": "^2.1.0",
    "babel-jest": "^28.1.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^5.10.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^4.3.8",
    "jest": "^28.1.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "rollup": "^2.74.1",
    "rollup-plugin-clear": "^2.0.7"
  }
}
